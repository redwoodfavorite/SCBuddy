{
  "manifest_version": 2,

  "name": "SCBuddy",
  "description": "Track Starcraft players and receive notifications for their upcoming series.",
  "version": "2.0.0",
  "icons": {
    "128": "SCBuddyLogo128.png"
  },
  "browser_action": {
    "default_icon": "SCBuddyLogo128.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "storage",
    "notifications",
    "alarms",
    "tabs"
  ],
  "background": {
    "scripts": ["background.bundle.js"],
    "persistent": false
  }
}
